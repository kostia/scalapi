source 'http://rubygems.org'


group :standard do
  gem 'json'        # you are free to select a different coder
                    # (you'll likely have to modify the 'Accept' header then)

  gem 'rest-client' # you may use a different http wrapper, as long as it
                    # - has resources supporting nesting using[...]
                    # - supports the request methods in use (get, post)
end

group :test do
  gem 'rspec', '~> 2.6'
end
